@model IEnumerable<Movie_Tracker.Models.WatchedMovie>

@{
    ViewData["Title"] = "WatchedMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Watched Movies</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Url.Content(item.Movie.Poster)" width="135" height="215"/>
            </td>
            <td>
                @Html.ActionLink(item.Movie.Title, "Details", "Movies", new { Id = item.MovieId }, null )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Description)
            </td>
            <td>
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieId">Details</a> <br />
                <a asp-action="Delete" asp-route-id="@item.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>

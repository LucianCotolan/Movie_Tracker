@model Movie_Tracker.Models.Movie

@{
    ViewData["Title"] = "AddToWatched";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Watchlist</h1>

<h3>Are you sure you want to add this movie to the watched list?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poster)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content(@Model.Poster)"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-controller="WatchedMovies" asp-action="AddToWatched">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Add" class="btn btn-secondary" /> |
        <a asp-controller="Movies" asp-action="Index">Back to Movies</a>
    </form>
</div>

@model Movie_Tracker.Models.Director

@{
    ViewData["Title"] = "Details";
}

<h1>Director</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Url.Content(@Model.Image)"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DirectedMovies)
        </dt>
        <dd class = "col-sm-10">
            <table class="table table-dark">
                @foreach (var item in Model.DirectedMovies)
                {
                    <tr>
                        <td>
                            @Html.ActionLink(item.Title, "Details", "Movies", new { Id = item.Id }, null )
                        </td>

                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    @if (signInManager.IsSignedIn(User) && User.IsInRole("Manager"))
    {
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    |
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
